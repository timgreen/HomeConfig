FROM m0rf30/arch-yay

# for hcm
RUN yay --noconfirm -Syu \
  coreutils \
  findutils \
  util-linux \
  grep \
  bash \
  zsh \
  ncurses \
  rsync \
  wget \
  jq \
  python-pip \
  yq2-bin

# required tools
RUN yay --noconfirm -Syu \
  procps \
  curl \
  vim \
  tmux \
  git \
  unzip \
  zip \
  fcitx-rime \
  rime-wubi \
  rime-pinyin-simp

USER root
# for hcm
RUN pip install yq
ARG UID
RUN useradd -u $UID -ms /bin/bash timgreen
ENV HOME /home/timgreen
RUN mkdir /home/linuxbrew \
  && chown timgreen /home/linuxbrew
USER timgreen
